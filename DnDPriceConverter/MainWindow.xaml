<Window x:Class="DnDPriceConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDPriceConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="490" Width="585">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="414" Margin="10,56,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" x:Name="InputBox" AcceptsReturn="True"/>
        <Button Content="Do Convert" HorizontalAlignment="Center" Height="414" Margin="0,56,0,0" VerticalAlignment="Top" Width="124" Click="Button_Click"/>
        <Label Content="Mod" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="58,14,0,0" Text="140" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="ModBox"/>
        <TextBox HorizontalAlignment="Left" Height="408" Margin="360,56,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" x:Name="OutputBox"/>
        <CheckBox Content="Detect usables" HorizontalAlignment="Left" Margin="183,14,0,0" VerticalAlignment="Top" x:Name="DetectUsablesCheck" IsChecked="True"/>

    </Grid>
</Window>
